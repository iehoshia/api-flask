.login
    margin 0
    padding 0
    margin-top 0
    width 100%
    max-width 100%
    background-color #f3f3f3
    .internal-login
        margin 0 auto
        //border 1px solid #000
        text-align center
        margin-top 40px
        width 340px
        overflow flex
        clear both
        padding-top 60px
        padding-bottom 60px
        .inner-box, .row
            background-color #fff
            border 1px solid #f9f9f9
            overflow hidden
            clear both
            margin-top 40px
            color #303030
            padding 5px
            h1
                font-size 25px
            .form
                color #303030
                text-align left
            .line
                display block
                width 100%
                .a-login
                    width 99%
                    .loginBtn
                        width 97%
                        border-radius 2px
                .form
                    color #303030
                    text-align left
                    #submit
                        border-radius 2px
                        width 99%
                        margin 0 auto
            .clear-row
                height 10px
                width 100%
                display block
            .line-title h1
                font-size 19px
                color #303030
                font-weight bold
                padding 0
                margin 0 auto
                width 95%
                margin-top 14px
                margin-bottom 0
                padding-top 5px
                padding-bottom 5px
                text-align left
            .link
                text-decoration none
            .pline, .pline:hover, .pline:focus, .pline-clear
                display block
                text-align left
                width 95%
                margin 3px auto
                margin-top 8px
                padding 3px
                background-color #e1e1e1
                border 1px solid #c6c2c2
                color #737373
                height 38px
                overflow hidden
                clear both
                font-weight bold
                text-align center
                text-decoration none
                line-height 28px
                position relative
            .pline-clear
                background-color #fff
                height 10px
                border 0
            a .pline, a .pline:hover
                text-decoration none