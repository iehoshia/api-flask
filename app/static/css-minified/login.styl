input {
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
}
#submit, .call-to-us, .btn .btn-default
    width 95%
    text-decoration none
    text-align center
    height 38px
    margin 10px auto
    color #fff
    background rgb(77,225,137)
    background linear-gradient(90deg, rgba(77,225,137,1) 0%, rgba(77,225,137,1) 31%, rgba(145,224,97,1) 100%) 
    border 0
    border-radius 8px
    margin-bottom 12px
    margin-left 9px
    font-weight bold
    float left
    border-radius 2px !important

.loginBtn--facebook
    background-color #224961
.loginBtn--facebook:hover
    background-color #224961

.login
    margin 0
    padding 0
    margin-top 0
    width 450px
    margin 0 auto
    //max-width 100%
    //background-color #f3f3f3
    .internal-login
        margin 0 auto
        //border 1px solid #000
        text-align center
        margin-top 40px
        width 340px
        overflow flex
        clear both
        padding-top 60px
        padding-bottom 60px
        .inner-box, .row
            background-color #fff
            border 1px solid #f3f3f3
            overflow hidden
            clear both
            margin-top 0px
            color #303030
            padding 5px
            h1
                font-size 25px
                width 100%
            .form
                color #303030
                text-align left
                width 100%
            .line
                display block
                width 100%
                .a-login
                    width 99%
                    .loginBtn
                        width 97%
                        border-radius 2px
                .form
                    color #303030
                    text-align left
                    #submit
                        border-radius 2px
                        width 99%
                        margin 0 auto
            .clear-row
                height 10px
                width 100%
                display block
            .line-title h1
                font-size 19px
                color #303030
                font-weight bold
                padding 0
                margin 0 auto
                width 95%
                margin-top 14px
                margin-bottom 0
                padding-top 5px
                padding-bottom 5px
                text-align left
            .link
                text-decoration none
            .pline, .pline:hover, .pline:focus, .pline-clear
                display block
                text-align left
                width 95%
                margin 3px auto
                margin-top 8px
                padding 3px
                background-color #e1e1e1
                border 1px solid #c6c2c2
                color #737373
                height 38px
                overflow hidden
                clear both
                font-weight bold
                text-align center
                text-decoration none
                line-height 28px
                position relative
            .pline-clear
                background-color #fff
                height 10px
                border 0
            a .pline, a .pline:hover
                text-decoration none

@media (max-width: 767px)
    .login
        width 100%