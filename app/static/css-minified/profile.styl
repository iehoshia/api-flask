.external-profile
    background-color #f0f0f0
    max-width 450px
    margin 0 auto
    margin-top 60px
    margin-bottom 10px
    padding 5px
    background-size cover
    overflow hidden
    .internal-profile
        max-width 1200px
        margin 0 auto
        padding-bottom 10px
        background-color #fff
        //border 1px solid #f3f3f3
    .buttons
        margin 10px auto
        .button {
            background-color:#e1e1e1;
            color #424242
            -moz-border-radius:2px;
            -webkit-border-radius:2px;
            border-radius:2px;
            border:1px solid #d1d1d1;
            display:block;
            cursor:pointer;
            font-size:15px;
            padding:5px 31px;
            text-decoration:none;
            width 60%
            margin 0 auto;
            text-align center
        }
        .button:hover {
            background-color:#e1e1e1;
        }
        .button:active {
            position:relative;
            top:1px;
        }

@media (max-width: 768px)
    .courses
        background-color #e8ecee
        .internal-courses
            background-color #fff
            padding 5px
            width auto
            .title-course
                color #3e9a46